<!DOCTYPE html>
<html>
	<head>
	  <title>Gisquire</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
<body>
    <div>
      <% if current_user %>
        <strong><%= current_user.name %>, <%= current_user.email %></strong>!
        <%= link_to "로그아웃", signout_path, id: "sign_out" %>
      <% else %>
        <%= link_to "Google계정으로 접속하기", "/auth/google_oauth2", id: "sign_in" %>
      <% end %>
    </div>
    <div>
    <%= yield %>
    </div>
  </body>
</html>
